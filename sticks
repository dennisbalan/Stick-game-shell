#!/bin/bash

#choose number of sticks

function getNumSticks {
      read -p "How many stick you want?" numSticks
      while [[ $numSticks -lt 10 ]]
      do
          echo "Sorry. You need 10 sticks or more"
          read -p "How many sticks you want man?" numSticks
      done
      echo $numSticks
}

