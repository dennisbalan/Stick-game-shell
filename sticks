#This is the computer Turn function. If the number of sticks is divisble by 5 it takes 1 stick
#Else it takes modulo 5 amount of sticks
funtion computerTurn(){
        
        if [[  "$1%5" -eq 0 ]]
        then
             n=$( (n-1) )
        else
             f="$1%5"
             n=$( (n-f) )
        fi
        i=1
        while [[ $i -le $1 ]]
        do
        	echo -n "|"
        	i=$((i+1))

	done
	echo -e -n "($1)\$1"

}
#user turn 
function userTurn {
read -p "Please type in the number of sticks you need. Do not take more than 4 sticks" userSticks
if [[ $userSticks -ge 1 ]] && [[ $userSticks -le 4 ]]
then
    n=$( (n-userSticks) )
else
  echo  "You should type an amount between 1 and 4."
  if [[ $userSticks -ge 1 ]] && [[ $userSticks -le 4 ]]
  then 
    n=$( (n-userSticks) )
  else
   echo "You have forfeited the game"
   $gameOver=1
   fi
fi
}

